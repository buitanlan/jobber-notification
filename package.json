{
  "name": "jobber-notification",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "type": "commonjs",
  "scripts": {
    "start": "pm2 start ./build/src/app.js -f -i 5 --attach --watch | pino-pretty -c",
    "stop": "pm2 stop all",
    "delete": "pm2 delete all",
    "dev": "nodemon -r tsconfig-paths/register src/app.ts | pino-pretty -c",
    "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json && ts-node tools/copyAssets.ts",
    "lint:check": "pnpx eslint src/**/*.ts",
    "lint:fix": "pnpx eslint src/**/*.ts --fix",
    "prettier:check": "pnpx prettier 'src/**/*.{ts,html,scss,css,json}' --check",
    "prettier:fix": "pnpx prettier 'src/**/*.{ts,html,scss,css,json}' --write",
    "test": "jest --coverage=true -w=1 --forceExit --detectOpenHandles --watchAll=false",
    "format": "pnpx prettier \"src/**/*.{ts,html,scss,css,json}\" --write",
    "prepare": "pnpx husky install ./.husky"
  },
  "devDependencies": {
    "@jest/types": "^29.6.3",
    "@types/amqplib": "0.10.5",
    "@types/email-templates": "10.0.4",
    "@types/express": "4.17.21",
    "@types/jest": "^29.5.12",
    "@types/nodemailer": "6.4.14",
    "@types/shelljs": "^0.8.15",
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.6.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5",
    "typescript-transform-paths": "^3.4.7"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^8.13.1",
    "@tanlan/jobber-shared": "^1.0.8",
    "amqplib": "^0.10.3",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.9",
    "email-templates": "^11.1.1",
    "express": "^4.19.2",
    "express-async-errors": "^3.1.1",
    "http-status-codes": "^2.3.0",
    "nodemailer": "^6.9.13",
    "pino-pretty": "^11.0.0",
    "shelljs": "^0.8.5",
    "tslib": "^2.6.2",
    "winston": "^3.13.0"
  },
  "lint-staged": {
    "*": "pnpm run format"
  }
}
